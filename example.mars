*:link {
	color: blue;
}

button,
input[type=("button","submit","reset")] {
	background-color: white;
	color: match(*:link);
	padding: 0.5em 1em;
	width: ?(100% - prop(padding-left) - prop(padding-right));
	
	:hover,
	:focus {
		background-color: lightblue;
	}
	:active {
		background-color: black;
		color: white;
	}
	
	(max-width: 1024px) {
		font-size: 80%;
	}
}

(h1, h2, h3, h4, h5, h6).plain {
	margin: 0;
	padding: 0;
}